@model GAbsence.Models.Matiere

@{
    ViewData["Title"] = "Supprimer la matière";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <h3>Êtes-vous sûr de vouloir supprimer cette matière ?</h3>
    
    <dl class="row">
        <dt class="col-sm-2">Code</dt>
        <dd class="col-sm-10">@Model.CodeMatiere</dd>

        <dt class="col-sm-2">Libellé</dt>
        <dd class="col-sm-10">@Model.Libelle</dd>

        <dt class="col-sm-2">Nombre d'heures</dt>
        <dd class="col-sm-10">@Model.NbreHeures</dd>

        <dt class="col-sm-2">Coefficient</dt>
        <dd class="col-sm-10">@Model.Coefficient</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CodeMatiere" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </form>
</div> 