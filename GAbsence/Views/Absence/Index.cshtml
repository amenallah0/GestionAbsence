@model IEnumerable<GAbsence.Models.Absence>

@{
    ViewData["Title"] = "Liste des absences";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Nouvelle absence</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Étudiant</th>
                <th>Date</th>
                <th>Créneau</th>
                <th>Justifiée</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Etudiant.Nom @item.Etudiant.Prenom</td>
                    <td>@item.Date.ToString("dd/MM/yyyy")</td>
                    <td>@item.CreneauHoraire</td>
                    <td>@(item.EstJustifiee ? "Oui" : "Non")</td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Modifier</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Détails</a>
                            <button type="button" class="btn btn-danger btn-sm" 
                                    onclick="confirmDelete(@item.Id)">Supprimer</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form id="deleteForm" asp-action="Delete" method="post">
    <input type="hidden" id="absenceId" name="id" value="" />
</form>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm('Êtes-vous sûr de vouloir supprimer cette absence ?')) {
                document.getElementById('absenceId').value = id;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
} 