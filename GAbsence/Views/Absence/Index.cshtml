@model IEnumerable<GAbsence.Models.Absence>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="fas fa-calendar-times me-2"></i>
            Liste des Absences
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nouvelle Absence
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Étudiant</th>
                    <th>Matière</th>
                    <th>Enseignant</th>
                    <th>Date</th>
                    <th>Créneau</th>
                    <th>Justifiée</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@($"{item.Etudiant?.Nom} {item.Etudiant?.Prenom}")</td>
                        <td>@item.Matiere?.Libelle</td>
                        <td>@($"{item.Enseignant?.Nom} {item.Enseignant?.Prenom}")</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.CreneauHoraire</td>
                        <td>
                            @if (item.EstJustifiee)
                            {
                                <span class="badge bg-success">Oui</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Non</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section CSS {
    <style>
        .table td {
            vertical-align: middle;
        }
    </style>
} 