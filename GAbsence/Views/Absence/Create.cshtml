@model GAbsence.Models.Absence

<div class="container">
    <h1>Ajouter une absence</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Date">Date</label>
            <input asp-for="Date" class="form-control" type="date" required />
        </div>

        <div class="form-group">
            <label asp-for="CreneauHoraire">Créneau horaire</label>
            <select asp-for="CreneauHoraire" class="form-control" asp-items="@(new SelectList(ViewBag.Creneaux))" required>
                <option value="">-- Sélectionnez un créneau --</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="CodeEtudiant">Étudiant</label>
            <select asp-for="CodeEtudiant" class="form-control" asp-items="ViewBag.Etudiants" required>
                <option value="">-- Sélectionnez un étudiant --</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="CodeEnseignant">Enseignant</label>
            <select asp-for="CodeEnseignant" class="form-control" asp-items="ViewBag.Enseignants" required>
                <option value="">-- Sélectionnez un enseignant --</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="CodeMatiere">Matière</label>
            <select asp-for="CodeMatiere" class="form-control" asp-items="ViewBag.Matieres" required>
                <option value="">-- Sélectionnez une matière --</option>
            </select>
        </div>

        <div class="form-group">
            <div class="custom-control custom-checkbox">
                <input asp-for="EstJustifiee" class="custom-control-input" type="checkbox" />
                <label asp-for="EstJustifiee" class="custom-control-label">Absence justifiée</label>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Justification">Justification</label>
            <textarea asp-for="Justification" class="form-control" rows="3"></textarea>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Créer</button>
            <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </form>
</div> 