@model GAbsence.Models.Absence

@{
    ViewData["Title"] = "Détails Absence";
}

<div class="card">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Détails de l'absence</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Étudiant</dt>
            <dd class="col-sm-9">
                @($"{Model.Etudiant?.Nom} {Model.Etudiant?.Prenom}")
                <small class="text-muted">(@Model.Etudiant?.CodeEtudiant)</small>
            </dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Créneau horaire</dt>
            <dd class="col-sm-9">@Model.CreneauHoraire</dd>

            <dt class="col-sm-3">Matière</dt>
            <dd class="col-sm-9">@Model.Matiere?.Libelle</dd>

            <dt class="col-sm-3">Enseignant</dt>
            <dd class="col-sm-9">
                @($"{Model.Enseignant?.Nom} {Model.Enseignant?.Prenom}")
                <small class="text-muted">(@Model.Enseignant?.CodeEnseignant)</small>
            </dd>

            <dt class="col-sm-3">État</dt>
            <dd class="col-sm-9">
                @if (Model.EstJustifiee)
                {
                    <span class="badge bg-success">Justifiée</span>
                }
                else
                {
                    <span class="badge bg-danger">Non justifiée</span>
                }
            </dd>

            @if (!string.IsNullOrEmpty(Model.Justification))
            {
                <dt class="col-sm-3">Justification</dt>
                <dd class="col-sm-9">@Model.Justification</dd>
            }
        </dl>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i> Modifier
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Retour à la liste
            </a>
        </div>
    </div>
</div> 