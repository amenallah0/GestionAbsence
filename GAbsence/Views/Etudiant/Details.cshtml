@model GAbsence.Models.Etudiant

@{
    ViewData["Title"] = "Détails Étudiant";
}

<div class="card">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="fas fa-user-circle me-2"></i>Détails de l'étudiant</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4 text-center mb-4">
                <div class="border rounded-circle p-3 d-inline-block mb-3">
                    <i class="fas fa-user-graduate fa-4x text-info"></i>
                </div>
                <h4>@Model.NomComplet</h4>
                <p class="text-muted">@Model.CodeEtudiant</p>
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nom)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nom)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Prenom)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Prenom)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateNaissance)</dt>
                    <dd class="col-sm-8">@Model.DateNaissance.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Classe</dt>
                    <dd class="col-sm-8">
                        @if (Model.Classe != null)
                        {
                            <span class="badge bg-primary">@Model.Classe.NomClasse</span>
                        }
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Mail)</dt>
                    <dd class="col-sm-8">
                        <a href="mailto:@Model.Mail">@Model.Mail</a>
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Tel)</dt>
                    <dd class="col-sm-8">
                        <a href="tel:@Model.Tel">@Model.Tel</a>
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Adresse)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Adresse)</dd>
                </dl>

