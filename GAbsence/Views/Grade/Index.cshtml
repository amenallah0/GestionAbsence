@model IEnumerable<GAbsence.Models.Grade>

@{
    ViewData["Title"] = "Liste des Grades";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Ajouter un grade</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Nom du grade</th>
            <th>Nombre d'enseignants</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CodeGrade</td>
                <td>@item.NomGrade</td>
                <td>@(item.Enseignants?.Count ?? 0)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CodeGrade" class="btn btn-warning btn-sm">Modifier</a>
                    <a asp-action="Details" asp-route-id="@item.CodeGrade" class="btn btn-info btn-sm">DÃ©tails</a>
                </td>
            </tr>
        }
    </tbody>
</table> 