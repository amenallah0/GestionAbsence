@model GAbsence.Models.Grade

@{
    ViewData["Title"] = "Détails Grade";
}

<div class="card">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Détails du grade</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CodeGrade)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CodeGrade)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Libelle)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Libelle)</dd>
        </dl>

        <div class="mt-4">
            <a asp-action="Edit" asp-route-id="@Model.CodeGrade" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i> Modifier
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Retour à la liste
            </a>
        </div>
    </div>
</div> 