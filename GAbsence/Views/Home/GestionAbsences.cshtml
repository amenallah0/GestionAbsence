@{
    ViewData["Title"] = "Gestion des Absences";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Saisir une absence</h5>
                    <p class="card-text">Enregistrer une nouvelle absence</p>
                    <a asp-controller="FicheAbsence" asp-action="Create" class="btn btn-primary">Saisir</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Liste des absences</h5>
                    <p class="card-text">Consulter toutes les absences</p>
                    <a asp-controller="FicheAbsence" asp-action="Index" class="btn btn-info">Voir la liste</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Rapports d'absences</h5>
                    <p class="card-text">Générer des rapports d'absences</p>
                    <a asp-controller="Absence" asp-action="Rapport" class="btn btn-success">Rapports</a>
                </div>
            </div>
        </div>
    </div>
</div> 