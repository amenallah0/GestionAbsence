@{
    ViewData["Title"] = "Gestion des Matières";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ajouter une matière</h5>
                    <p class="card-text">Créer une nouvelle matière</p>
                    <a asp-controller="Matiere" asp-action="Create" class="btn btn-primary">Ajouter</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Liste des matières</h5>
                    <p class="card-text">Consulter et modifier les matières</p>
                    <a asp-controller="Matiere" asp-action="Index" class="btn btn-info">Voir la liste</a>
                </div>
            </div>
        </div>
    </div>
</div> 