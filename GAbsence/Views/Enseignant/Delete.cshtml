@model GAbsence.Models.Enseignant

@{
    ViewData["Title"] = "Supprimer Enseignant";
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0"><i class="fas fa-user-times me-2"></i>Confirmer la suppression</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Êtes-vous sûr de vouloir supprimer cet enseignant ?
        </div>

        <div class="row">
            <div class="col-md-4 text-center mb-4">
                <div class="border rounded-circle p-3 d-inline-block mb-3">
                    <i class="fas fa-user-tie fa-4x text-danger"></i>
                </div>
                <h4>@($"{Model.Nom} {Model.Prenom}")</h4>
                <p class="text-muted">@Model.CodeEnseignant</p>
                @if (Model.Grade != null)
                {
                    <span class="badge bg-primary">@Model.Grade.Libelle</span>
                }
            </div>
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nom)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nom)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Prenom)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Prenom)</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Tel)</dt>
                    <dd class="col-sm-8">
                        <a href="tel:@Model.Tel">@Model.Tel</a>
                    </dd>

                    <dt class="col-sm-4">Grade</dt>
                    <dd class="col-sm-8">@(Model.Grade?.Libelle ?? "Non spécifié")</dd>

                    <dt class="col-sm-4">Département</dt>
                    <dd class="col-sm-8">@(Model.Departement?.NomDepartement ?? "Non spécifié")</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="CodeEnseignant" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-1"></i> Supprimer
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Retour à la liste
            </a>
        </form>
    </div>
</div> 