@model GAbsence.Models.Enseignant

<div class="container">
    <h1>Ajouter un enseignant</h1>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="CodeEnseignant" class="control-label">Code</label>
            <input asp-for="CodeEnseignant" class="form-control" />
            <span asp-validation-for="CodeEnseignant" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nom" class="control-label">Nom</label>
            <input asp-for="Nom" class="form-control" />
            <span asp-validation-for="Nom" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Prenom" class="control-label">Prénom</label>
            <input asp-for="Prenom" class="form-control" />
            <span asp-validation-for="Prenom" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Mail" class="control-label">Email</label>
            <input asp-for="Mail" class="form-control" />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Tel" class="control-label">Téléphone</label>
            <input asp-for="Tel" class="form-control" />
            <span asp-validation-for="Tel" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CodeDepartement" class="control-label">Département</label>
            <select asp-for="CodeDepartement" class="form-control">
                <option value="">-- Sélectionnez un département --</option>
                @if (ViewBag.CodeDepartement != null)
                {
                    @foreach (var item in ViewBag.CodeDepartement)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                }
            </select>
            <span asp-validation-for="CodeDepartement" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CodeGrade" class="control-label">Grade</label>
            <select asp-for="CodeGrade" class="form-control">
                <option value="">-- Sélectionnez un grade --</option>
                @if (ViewBag.CodeGrade != null)
                {
                    @foreach (var item in ViewBag.CodeGrade)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                }
            </select>
            <span asp-validation-for="CodeGrade" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Enregistrer" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Annuler</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 