@model GAbsence.Models.Enseignant

@{
    ViewData["Title"] = "Créer un enseignant";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="fas fa-user-plus me-2"></i>Créer un nouvel enseignant
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CodeEnseignant" class="control-label required"></label>
                            <input asp-for="CodeEnseignant" class="form-control" required />
                            <span asp-validation-for="CodeEnseignant" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nom" class="control-label required"></label>
                            <input asp-for="Nom" class="form-control" required />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Prenom" class="control-label required"></label>
                            <input asp-for="Prenom" class="form-control" required />
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DateRecrutement" class="control-label required"></label>
                            <input asp-for="DateRecrutement" class="form-control" type="date" required />
                            <span asp-validation-for="DateRecrutement" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label required"></label>
                            <input asp-for="Email" class="form-control" type="email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Tel" class="control-label required"></label>
                            <input asp-for="Tel" class="form-control" required />
                            <span asp-validation-for="Tel" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Adresse" class="control-label"></label>
                            <input asp-for="Adresse" class="form-control" />
                            <span asp-validation-for="Adresse" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CodeDepartement" class="control-label required"></label>
                            <select asp-for="CodeDepartement" class="form-select" asp-items="ViewBag.Departements" required>
                                <option value="">-- Sélectionner un département --</option>
                            </select>
                            <span asp-validation-for="CodeDepartement" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CodeGrade" class="control-label required"></label>
                            <select asp-for="CodeGrade" class="form-select" asp-items="ViewBag.Grades" required>
                                <option value="">-- Sélectionner un grade --</option>
                            </select>
                            <span asp-validation-for="CodeGrade" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-transparent text-end mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Enregistrer
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="fas fa-times me-1"></i>Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}