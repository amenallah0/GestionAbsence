@model IEnumerable<GAbsence.Models.Enseignant>

@{
    ViewData["Title"] = "Enseignants";
}

<div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-chalkboard-teacher me-2"></i>Liste des Enseignants
        </h5>
        <a asp-action="Create" class="btn btn-light">
            <i class="fas fa-plus me-1"></i>Nouvel Enseignant
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CodeEnseignant)</th>
                        <th>@Html.DisplayNameFor(model => model.Nom)</th>
                        <th>@Html.DisplayNameFor(model => model.Prenom)</th>
                        <th>Grade</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.Tel)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CodeEnseignant)</td>
                            <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                            <td>@Html.DisplayFor(modelItem => item.Prenom)</td>
                            <td>@Html.DisplayFor(modelItem => item.Grade.Libelle)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tel)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.CodeEnseignant" 
                                       class="btn btn-sm btn-warning" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.CodeEnseignant" 
                                       class="btn btn-sm btn-info" title="DÃ©tails">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CodeEnseignant" 
                                       class="btn btn-sm btn-danger" title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/French.json"
                }
            });
        });
    </script>
} 