@model IEnumerable<GAbsence.Models.Enseignant>

@{
    ViewData["Title"] = "Liste des Enseignants";
}

<div class="container py-4">
    <div class="card">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">
                <i class="fas fa-chalkboard-teacher me-2"></i>
                Liste des Enseignants
            </h1>
            <a asp-action="Create" class="btn btn-light">
                <i class="fas fa-plus me-2"></i>Nouvel Enseignant
            </a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" id="searchInput" class="form-control" placeholder="Rechercher un enseignant...">
                </div>

                <table class="table table-hover" id="enseignantsTable">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <i class="fas fa-id-card me-2"></i>
                                @Html.DisplayNameFor(model => model.CodeEnseignant)
                            </th>
                            <th>
                                <i class="fas fa-user me-2"></i>
                                @Html.DisplayNameFor(model => model.Nom)
                            </th>
                            <th>
                                <i class="fas fa-user me-2"></i>
                                @Html.DisplayNameFor(model => model.Prenom)
                            </th>
                            <th>
                                <i class="fas fa-envelope me-2"></i>
                                @Html.DisplayNameFor(model => model.Mail)
                            </th>
                            <th>
                                <i class="fas fa-phone me-2"></i>
                                @Html.DisplayNameFor(model => model.Tel)
                            </th>
                            <th>
                                <i class="fas fa-building me-2"></i>
                                @Html.DisplayNameFor(model => model.Departement)
                            </th>
                            <th>
                                <i class="fas fa-graduation-cap me-2"></i>
                                @Html.DisplayNameFor(model => model.Grade)
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.CodeEnseignant)</td>
                                <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                                <td>@Html.DisplayFor(modelItem => item.Prenom)</td>
                                <td>@Html.DisplayFor(modelItem => item.Mail)</td>
                                <td>@Html.DisplayFor(modelItem => item.Tel)</td>
                                <td>@Html.DisplayFor(modelItem => item.Departement.NomDepartement)</td>
                                <td>@Html.DisplayFor(modelItem => item.Grade.Libelle)</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.CodeEnseignant" 
                                           class="btn btn-sm btn-warning" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.CodeEnseignant" 
                                           class="btn btn-sm btn-info" title="Détails">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.CodeEnseignant" 
                                           class="btn btn-sm btn-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Recherche en temps réel
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#enseignantsTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // Tri des colonnes
            $("th").click(function() {
                var table = $(this).parents("table").eq(0);
                var rows = table.find("tr:gt(0)").toArray().sort(comparer($(this).index()));
                this.asc = !this.asc;
                if (!this.asc) {
                    rows = rows.reverse();
                }
                for (var i = 0; i < rows.length; i++) {
                    table.append(rows[i]);
                }
            });

            function comparer(index) {
                return function(a, b) {
                    var valA = getCellValue(a, index), valB = getCellValue(b, index);
                    return $.isNumeric(valA) && $.isNumeric(valB) ? 
                           valA - valB : valA.localeCompare(valB);
                }
            }

            function getCellValue(row, index) {
                return $(row).children("td").eq(index).text();
            }

            // Ajouter des tooltips Bootstrap
            $('[title]').tooltip();
        });
    </script>
} 