@model GAbsence.Models.Departement

<div class="container py-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h1 class="h3 mb-0">
                <i class="fas fa-building me-2"></i>
                Nouveau Département
            </h1>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="CodeDepartement" class="form-label">Code Département</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-hashtag"></i>
                            </span>
                            <input asp-for="CodeDepartement" class="form-control" placeholder="Ex: DEP001" />
                        </div>
                        <span asp-validation-for="CodeDepartement" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NomDepartement" class="form-label">Nom du Département</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-building"></i>
                            </span>
                            <input asp-for="NomDepartement" class="form-control" placeholder="Nom du département" />
                        </div>
                        <span asp-validation-for="NomDepartement" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DateCreation" class="form-label">Date de Création</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-calendar"></i>
                            </span>
                            <input asp-for="DateCreation" class="form-control" type="date" />
                        </div>
                        <span asp-validation-for="DateCreation" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Enregistrer
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            // Majuscules pour le code département
            $('#CodeDepartement').on('input', function() {
                $(this).val($(this).val().toUpperCase());
            });
        });
    </script>
} 