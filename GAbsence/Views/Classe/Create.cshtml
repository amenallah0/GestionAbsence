@model GAbsence.Models.Classe

@{
    ViewData["Title"] = "Ajouter une classe";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-3">
                <label asp-for="CodeClasse" class="control-label">Code de la classe</label>
                <input asp-for="CodeClasse" class="form-control" />
                <span asp-validation-for="CodeClasse" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NomClasse" class="control-label">Nom de la classe</label>
                <input asp-for="NomClasse" class="form-control" />
                <span asp-validation-for="NomClasse" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 