@model GAbsence.Models.Classe

<div class="container">
    <h1>Détails de la classe</h1>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Informations générales</h5>
            <dl class="row">
                <dt class="col-sm-3">Code</dt>
                <dd class="col-sm-9">@Model.CodeClasse</dd>

                <dt class="col-sm-3">Nom de la classe</dt>
                <dd class="col-sm-9">@Model.NomClasse</dd>

                <dt class="col-sm-3">Nombre d'étudiants</dt>
                <dd class="col-sm-9">@Model.Etudiants?.Count</dd>

                <dt class="col-sm-3">Total des absences</dt>
                <dd class="col-sm-9">@ViewBag.TotalAbsencesClasse</dd>
            </dl>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Liste des étudiants et leurs absences</h5>
            
            @if (Model.Etudiants != null && Model.Etudiants.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Total absences</th>
                            <th>Justifiées</th>
                            <th>Non justifiées</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var etudiant in Model.Etudiants)
                        {
                            var absences = ((IEnumerable<dynamic>)ViewBag.AbsencesParEtudiant)
                                .FirstOrDefault(a => ((dynamic)a).Etudiant.CodeEtudiant == etudiant.CodeEtudiant);
                            
                            <tr>
                                <td>@etudiant.CodeEtudiant</td>
                                <td>@etudiant.Nom</td>
                                <td>@etudiant.Prenom</td>
                                <td>@(absences?.TotalAbsences ?? 0)</td>
                                <td>@(absences?.AbsencesJustifiees ?? 0)</td>
                                <td>@(absences?.AbsencesNonJustifiees ?? 0)</td>
                                <td>
                                    <a asp-controller="Etudiant" 
                                       asp-action="Details" 
                                       asp-route-id="@etudiant.CodeEtudiant" 
                                       class="btn btn-info btn-sm">
                                        Détails
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    Aucun étudiant n'est inscrit dans cette classe.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.CodeClasse" class="btn btn-primary">Modifier</a>
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </div>
</div> 