@model GAbsence.Models.FicheAbsence

@{
    ViewData["Title"] = "Ajouter une absence";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Date" class="control-label">Date</label>
                <input asp-for="Date" class="form-control" type="date" required />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CreneauHoraire" class="control-label">Créneau horaire</label>
                <select asp-for="CreneauHoraire" class="form-control" required>
                    <option value="">-- Sélectionnez un créneau --</option>
                    <option value="8h-10h">8h-10h</option>
                    <option value="10h-12h">10h-12h</option>
                    <option value="14h-16h">14h-16h</option>
                    <option value="16h-18h">16h-18h</option>
                </select>
                <span asp-validation-for="CreneauHoraire" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CodeEtudiant" class="control-label">Étudiant</label>
                <select asp-for="CodeEtudiant" class="form-control" asp-items="ViewBag.Etudiants" required>
                    <option value="">-- Sélectionnez un étudiant --</option>
                </select>
                <span asp-validation-for="CodeEtudiant" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CodeEnseignant" class="control-label">Enseignant</label>
                <select asp-for="CodeEnseignant" class="form-control" asp-items="ViewBag.Enseignants" required>
                    <option value="">-- Sélectionnez un enseignant --</option>
                </select>
                <span asp-validation-for="CodeEnseignant" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Matiere" class="control-label">Matière</label>
                <input asp-for="Matiere" class="form-control" required />
                <span asp-validation-for="Matiere" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="EstJustifiee" class="form-check-input" />
                    <label asp-for="EstJustifiee" class="form-check-label">Absence justifiée</label>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Justification" class="control-label">Justification</label>
                <textarea asp-for="Justification" class="form-control"></textarea>
                <span asp-validation-for="Justification" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Créer</button>
                <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 