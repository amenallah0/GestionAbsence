@model IEnumerable<GAbsence.Models.FicheAbsence>

@{
    ViewData["Title"] = "Liste des Absences";
}

<h1>@ViewData["Title"]</h1>

<div class="row mb-3">
    <div class="col">
        <form asp-action="Index" method="get" class="form-inline">
            <div class="input-group">
                <input type="date" name="dateDebut" class="form-control" value="@ViewBag.DateDebut" />
                <input type="date" name="dateFin" class="form-control" value="@ViewBag.DateFin" />
                <select name="classeId" class="form-control" asp-items="ViewBag.Classes">
                    <option value="">Toutes les classes</option>
                </select>
                <button type="submit" class="btn btn-primary">Rechercher</button>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Enseignant</th>
            <th>Nombre d'absents</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DateJour.ToShortDateString()</td>
                <td>@item.Enseignant?.Nom @item.Enseignant?.Prenom</td>
                <td>@(item.FicheAbsenceSeances?.SelectMany(fas => fas.LignesFicheAbsence).Count() ?? 0)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CodeFicheAbsence" class="btn btn-info btn-sm">DÃ©tails</a>
                    <a asp-action="Edit" asp-route-id="@item.CodeFicheAbsence" class="btn btn-warning btn-sm">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@item.CodeFicheAbsence" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table> 