@model IEnumerable<GAbsence.Models.FicheAbsence>

@{
    ViewData["Title"] = "Liste des absences";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Ajouter une absence</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Créneau</th>
            <th>Étudiant</th>
            <th>Enseignant</th>
            <th>Matière</th>
            <th>Justifiée</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.CreneauHoraire</td>
                <td>@($"{item.Etudiant?.Nom} {item.Etudiant?.Prenom}")</td>
                <td>@($"{item.Enseignant?.Nom} {item.Enseignant?.Prenom}")</td>
                <td>@item.Matiere</td>
                <td>@(item.EstJustifiee ? "Oui" : "Non")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Modifier</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Détails</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table> 