@model MarquerAbsenceViewModel

<div class="container">
    <h2>Marquer les absences</h2>

    <form asp-action="MarquerAbsence" method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="DateSeance">Date de la séance</label>
                    <input asp-for="DateSeance" class="form-control" type="date" />
                    <span asp-validation-for="DateSeance" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="CodeMatiere">Matière</label>
                    <select asp-for="CodeMatiere" class="form-control"
                            asp-items="@ViewBag.Matieres">
                        <option value="">-- Sélectionner une matière --</option>
                    </select>
                    <span asp-validation-for="CodeMatiere" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="CodeClasse">Classe</label>
                    <select asp-for="CodeClasse" class="form-control"
                            asp-items="@ViewBag.Classes"
                            onchange="chargerEtudiants()">
                        <option value="">-- Sélectionner une classe --</option>
                    </select>
                    <span asp-validation-for="CodeClasse" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <table class="table table-bordered" id="tableEtudiants">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Nom complet</th>
                            <th>Absent</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Etudiants != null)
                        {
                            @for (int i = 0; i < Model.Etudiants.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input type="hidden" asp-for="@Model.Etudiants[i].CodeEtudiant" />
                                        @Model.Etudiants[i].CodeEtudiant
                                    </td>
                                    <td>
                                        <input type="hidden" asp-for="@Model.Etudiants[i].NomComplet" />
                                        @Model.Etudiants[i].NomComplet
                                    </td>
                                    <td>
                                        <input type="checkbox" asp-for="@Model.Etudiants[i].EstAbsent" />
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a asp-action="Index" class="btn btn-secondary">Retour</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function chargerEtudiants() {
            var classeId = $("#CodeClasse").val();
            if (classeId) {
                $.get("/Absence/GetEtudiantsByClasse", { classeId: classeId }, function (data) {
                    var tbody = $("#tableEtudiants tbody");
                    tbody.empty();
                    data.forEach(function (etudiant, index) {
                        var row = `
                            <tr>
                                <td>
                                    <input type="hidden" name="Etudiants[${index}].CodeEtudiant" value="${etudiant.codeEtudiant}" />
                                    ${etudiant.codeEtudiant}
                                </td>
                                <td>
                                    <input type="hidden" name="Etudiants[${index}].NomComplet" value="${etudiant.nomComplet}" />
                                    ${etudiant.nomComplet}
                                </td>
                                <td>
                                    <input type="checkbox" name="Etudiants[${index}].EstAbsent" />
                                </td>
                            </tr>`;
                        tbody.append(row);
                    });
                });
            }
        }
    </script>
}