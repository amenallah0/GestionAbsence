@model IEnumerable<GradeViewModel>

<h2>Liste des grades</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Ajouter un grade</a>
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.NomGrade)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>Nombre d'enseignants</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NomGrade)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.NombreEnseignants)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CodeGrade" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <a asp-action="Details" asp-route-id="@item.CodeGrade" class="btn btn-info btn-sm">
                            <i class="fas fa-info-circle"></i> Détails
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.CodeGrade" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Supprimer
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>